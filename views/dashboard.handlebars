{{#if posts.length}}
  <div class="col-md-12 project-list">

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-12">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}